<% if !user_signed_in? %>
    <div class="row" id="signup-hero">
      <!-- <button type="button" class="close pull-left" id="close-signup-hero">Ã—</button> -->
      <div class="col-md-8">
        <img src="img/home-signup-hero.png" alt="Welcome to Draww! Share your images with the world. SIGN UP FREE">
      </div>
      <div class="col-md-4">
        <form action="my-images-new-user.html">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Pick a username">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" placeholder="Your Email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Create a password">
          </div>
          <button class="btn btn-primary pull-right">Signup for Draww</button>
          <p class="terms">By clicking above, you agree to our <a href="#">terms of service</a>.</p>
        </form>
      </div>
    </div>
<% end %>
<div class="row view-heading">
  <div class="col-md-12">
    <h2><i class="icon-angle-right"></i>Front Page</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% if user_signed_in? %>
      <div class="new-post auto-square">
        <div class="dummy"></div>
        <%= link_to content_tag(:span, "", :class => "inner glyphicon glyphicon-plus-sign"), new_post_path, :data => { :toggle => "modal", :target => "#new-post-modal" } %>
      </div>
      <div class="modal fade" id="new-post-modal" tabindex="-1" role="dialog"></div>
    <% end %>
    <% @posts.each do |post| %>
      <div class="post">
        <%= link_to image_tag(post.image.url(:thumb)), post %>
        <%= link_to content_tag(:i, "", :class => "vote icon-arrow-up icon-large"), vote_up_url(post) %>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
